{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "devops-files-app",
        "image": "chaqattack/devops-files-app",
        "environment": [
          {
            "DB_NAME": "$DB_NAME",
            "DB_HOST": "$DB_HOST",
            "DB_ENV": "$DB_ENV",
            "DB_PASSWORD": "$DB_PASSWORD",
            "DB_USERNAME": "$DB_USERNAME"
      
          }
        ],
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 3081,
            "containerPort": 3081
          }
        ]
      },
      {
        "name": "devops-users-app",
        "image": "chaqattack/devops-users-app",
        "environment": [
          {
            "AWS_ACCESS_KEY" : "$AWS_ACCESS_KEY",
            "AWS_SECRET_KEY" : "$AWS_SECRET_KEY",
            "AWS_USER_BUCKET_NAME" :"$AWS_USER_BUCKET_NAME",
            "AWS_REGION" : "$AWS_REGION",
            "ENV" : "$ENV"
      
          }
        ],
        "essential": true,
        "memory": 128, 
        "portMappings": [
            {
              "hostPort": 3082,
              "containerPort": 3082
            }
        ],
        "links": [
          "devops-files-app"
        ]
      }
    ]
  }