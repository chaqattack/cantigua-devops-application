FROM node:8.11-alpine

ARG AWS_ACCESS_KEY
ARG AWS_SECRET_KEY

ENV DEVOPS_TEST_BACKEND_AWS_USER_BUCKET_NAME='MI_AWS_BUCKET' \
    DEVOPS_TEST_BACKEND_AWS_REGION='us-west-2'\
    DEVOPS_TEST_ENV='production' \
    DEVOPS_TEST_BACKEND_AWS_ACCESS_KEY=${AWS_ACCESS_KEY} \
    DEVOPS_TEST_BACKEND_AWS_SECRET_KEY=${AWS_SECRET_KEY} 

COPY . .
RUN npm install
CMD ["npm", "run", "start"]
