FROM node:8.11-alpine

ARG files_USERNAME
ARG files_PASSWORD

ENV DEVOPS_TEST_BACKEND_AWS_USER_BUCKET_NAME='elasticbeanstalk-us-east-2-911266112348' \
    DEVOPS_TEST_BACKEND_AWS_REGION='us-east-2'\
    DEVOPS_TEST_ENV='production' \
    DEVOPS_TEST_BACKEND_AWS_ACCESS_KEY=${AWS_ACCESS_KEY} \
    DEVOPS_TEST_BACKEND_AWS_SECRET_KEY=${AWS_SECRET_KEY} 

COPY . .
RUN npm install
CMD ["npm", "run", "start"]
